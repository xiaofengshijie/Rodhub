local repo = "https://raw.githubusercontent.com/deividcomsono/Obsidian/main/"
local Library = loadstring(game:HttpGet(repo .. "Library.lua"))()

Library.ForceCheckbox = false
Library.ShowToggleFrameInKeybinds = true

local Window = Library:CreateWindow({
    Title = "Rodhub",
    Footer = "version: example",
    Icon = 95816097006870,
    NotifySide = "Right",
    ShowCustomCursor = true,
})

local Tabs = {
    ["透视"] = Window:AddTab("透视", "eye"),
    ["楼层"] = Window:AddTab("楼层", "layers"),
    ["反作弊"] = Window:AddTab("反作弊", "shield"),
    ["功能"] = Window:AddTab("功能", "flag"),
    ["UI Settings"] = Window:AddTab("UI Settings", "settings")
}

local WallhackLeft = Tabs["透视"]:AddLeftGroupbox("玩家透视")
local WallhackRight = Tabs["透视"]:AddRightGroupbox("物体透视")
WallhackLeft:AddToggle("PlayerESP", {Text = "玩家轮廓", Default = false})
WallhackLeft:AddColorPicker("ESPColor", {Default = Color3.new(1, 0.5, 0)})
WallhackRight:AddToggle("ItemESP", {Text = "物品高亮", Default = false})
WallhackRight:AddSlider("ESPRange", {Text = "透视范围", Min = 0, Max = 500, Default = 100, Rounding = 0})

local FloorLeft = Tabs["楼层"]:AddLeftGroupbox("楼层选择")
local FloorRight = Tabs["楼层"]:AddRightGroupbox("传送设置")
FloorLeft:AddDropdown("FloorSelect", {Text = "选择楼层", Default = "1楼", Values = {"1楼", "2楼", "3楼", "地下室"}})
FloorLeft:AddLabel("当前所在：未知楼层", true, "FloorStatus")
FloorRight:AddButton({Text = "传送到达", Func = function() end})
FloorRight:AddToggle("AutoFloor", {Text = "自动导航", Default = false})

local AntiCheatLeft = Tabs["反作弊"]:AddLeftGroupbox("检测系统")
local AntiCheatRight = Tabs["反作弊"]:AddRightGroupbox("保护措施")
AntiCheatLeft:AddToggle("AntiDetection", {Text = "反检测模式", Default = true})
AntiCheatLeft:AddLabel("最后检测时间:", true, "LastCheckTime")
AntiCheatRight:AddToggle("MemoryProtect", {Text = "内存保护", Default = false})
AntiCheatRight:AddButton({Text = "清除日志", Func = function() end})
